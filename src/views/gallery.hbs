<h1>Gallery</h1>
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
  {{#each artworks}}
    <div class="card">
      <img src="{{this.image}}" alt="{{this.title}}" class="w-full h-48 object-cover rounded">
      <h2 class="text-xl font-bold mt-2">{{this.title}}</h2>
      <p class="text-gray-600">{{this.medium}} - {{this.year}}</p>
    </div>
  {{/each}}
</div>