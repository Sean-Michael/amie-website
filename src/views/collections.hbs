<section class="container mx-auto mt-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {{#each collections}}
      <div class="relative bg-gray-100 rounded-lg overflow-hidden shadow-md">
        <img src="{{this.coverImage}}" alt="{{this.title}}" class="w-full h-64 object-cover">
        <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-75"></div>
        <div class="absolute bottom-0 p-6 text-white">
          <h2 class="text-2xl font-bold">{{this.title}}</h2>
          <p class="text-lg mt-2">{{this.description}}</p>
          <a href="/collections/{{this._id}}" class="text-blue-400 underline mt-4 block">View Collection</a>
        </div>
      </div>
    {{/each}}
  </div>
</section>
